<Window x:Class="AtomicQA.NamePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtomicQA"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Rename" Height="178.716" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock>New Name: </TextBlock>
            <TextBox Margin="0 10 0 20" Name="NameInputBox">
            </TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="Cancel">Cancel</Button>
                <Button Click="Save" Background="GreenYellow" Margin="80 0 0 0">Save</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
