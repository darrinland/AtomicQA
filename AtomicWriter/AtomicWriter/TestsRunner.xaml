<Controls:MetroWindow x:Class="AtomicWriter.TestsRunner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtomicWriter"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Icon="AtomicQA.png"
        Title="Test Runner" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" FontSize="20" Padding="20">Test Runner</TextBlock>
        <Button Name="BackToWelcomeScreenButton" Click="BackToWelcomeScreenButton_Click">Return to Welcome Screen</Button>
        <Button Name="OpenTestSuiteButton" Click="OpenTestSuiteButton_Click">Open Test Suite</Button>
        <TextBlock Name="TestsFoundLabel" HorizontalAlignment="Center" Visibility="Collapsed"></TextBlock>
        <Button Name="RunTestsButton" Click="RunTestsButton_Click" Visibility="Hidden">Run Tests</Button>
    </StackPanel>
</Controls:MetroWindow>
