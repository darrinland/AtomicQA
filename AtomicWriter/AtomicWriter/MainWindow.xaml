<Controls:MetroWindow x:Class="AtomicWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtomicWriter"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Icon="AtomicQA.png"
        Title="Atomic QA"
        Height="450"
        Width="800">
    <StackPanel Orientation="Vertical" >
        <StackPanel Name="ActionButtonBar" Orientation="Horizontal">
            <Button Name="OpenTestSuiteButton" Click="OpenTestSuiteButton_Click">Open Test Suite</Button>
        </StackPanel>
        <TextBlock FontSize="20">TESTS:</TextBlock>
        <ListBox Name="TestsList" MouseDoubleClick="TestsList_MouseDoubleClick"/>
        <Button Name="DeleteTestButton" Click="DeleteTestButton_Click">Delete Selected Test</Button>
        <Button Name="NewTestButton" Click="NewTestButton_Click">New Test</Button>
    </StackPanel>

</Controls:MetroWindow>
